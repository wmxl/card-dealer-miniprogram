/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 180rpx 40rpx 40rpx;
  position: relative;
}

.rules-btn {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  padding: 14rpx 22rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
  color: white;
  font-size: 26rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  line-height: 1.3;
  white-space: nowrap;
  z-index: 10;
}

.header {
  text-align: center;
  margin-bottom: 70rpx;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.content {
  width: 100%;
  max-width: 600rpx;
}

.btn {
  width: 100%;
  border: none;
  border-radius: 36rpx;
  font-size: 28rpx;
  padding: 26rpx 0;
  margin-bottom: 26rpx;
  background: rgba(255, 255, 255, 0.18);
  color: #ffffff;
  box-shadow: 0 6rpx 18rpx rgba(12, 36, 99, 0.25);
  font-weight: 600;
  letter-spacing: 2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.35);
  backdrop-filter: blur(10rpx);
}

.btn-primary {
  background: rgba(255, 255, 255, 0.92);
  color: #5b6fee;
  border-color: transparent;
  box-shadow: 0 10rpx 20rpx rgba(91, 111, 238, 0.25);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.16);
  color: #ffffff;
  border-color: rgba(255, 255, 255, 0.35);
}

.btn-continue {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #fff;
  border-color: transparent;
  box-shadow: 0 10rpx 24rpx rgba(240, 147, 251, 0.35);
}

.continue-section {
  margin-bottom: 40rpx;
}

.continue-info {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.continue-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 10rpx;
}

.continue-room {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.continue-player {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.divider {
  text-align: center;
  margin: 40rpx 0;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

.input-group {
  display: flex;
  align-items: stretch;
  gap: 12rpx;
  width: 100%;
}

.input {
  flex: 1 1 50%;
  min-width: 0;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  color: #333;
  border: none;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.12);
  text-align: left;
}

.join-btn {
  flex: 1 1 50%;
  min-width: 0;
  padding: 0 24rpx;
  height: 88rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.18);
  border: 2rpx solid rgba(255, 255, 255, 0.35);
  color: #fff;
  box-shadow: 0 6rpx 18rpx rgba(12, 36, 99, 0.25);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  white-space: nowrap;
}
