/* pages/assassinate/assassinate.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  padding: 40rpx;
  position: relative;
}

.rules-btn {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  color: white;
  font-size: 28rpx;
  z-index: 10;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  color: white;
  font-size: 32rpx;
}

/* 等待区域 */
.waiting-section {
  text-align: center;
  color: white;
  padding-top: 200rpx;
}

.waiting-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.waiting-text {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #ff6b6b;
}

.waiting-desc {
  font-size: 32rpx;
  margin-bottom: 30rpx;
  opacity: 0.9;
}

.waiting-tip {
  font-size: 28rpx;
  padding: 30rpx;
  background: rgba(255, 107, 107, 0.2);
  border-radius: 20rpx;
  margin: 0 40rpx;
}

/* 刺杀区域 */
.assassinate-section {
  padding-top: 40rpx;
}

.assassinate-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.header-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-bottom: 10rpx;
}

.header-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.tip-card {
  background: rgba(255, 107, 107, 0.2);
  border-left: 4rpx solid #ff6b6b;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 15rpx;
}

.tip-content {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

.players-section {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  margin-bottom: 30rpx;
}

.players-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
}

.player-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  border: 3rpx solid transparent;
  position: relative;
  transition: all 0.3s;
}

.player-card.selected {
  background: rgba(255, 107, 107, 0.3);
  border-color: #ff6b6b;
}

.player-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.player-name {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.selected-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff6b6b;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.actions {
  margin-bottom: 30rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

.btn-assassinate {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: white;
  font-weight: bold;
}

.btn-assassinate[disabled] {
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.5);
}

.warning {
  text-align: center;
  color: #ffd93d;
  font-size: 26rpx;
  padding: 20rpx;
  background: rgba(255, 217, 61, 0.2);
  border-radius: 12rpx;
}
