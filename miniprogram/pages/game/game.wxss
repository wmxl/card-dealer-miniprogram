/* pages/game/game.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  position: relative;
  padding-bottom: 100rpx;
}

.rules-btn {
  position: absolute;
  top: 30rpx;
  right: 250rpx;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  color: white;
  font-size: 28rpx;
  z-index: 10;
}

.role-btn {
  position: absolute;
  top: 30rpx;
  right: 140rpx;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  color: white;
  font-size: 28rpx;
  z-index: 10;
}

.reset-btn {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  padding: 20rpx 30rpx;
  background: rgba(255, 107, 107, 0.3);
  border-radius: 40rpx;
  color: white;
  font-size: 28rpx;
  z-index: 10;
}

.room-header {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  color: white;
  font-size: 28rpx;
  z-index: 10;
}

.room-id-label {
  opacity: 0.9;
}

.room-id-value {
  font-weight: bold;
  margin-left: 5rpx;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  color: white;
  font-size: 32rpx;
}

.content {
  padding-top: 120rpx; /* 增加顶部间距，避免被房间号和规则按钮覆盖 */
}

/* 游戏进度 */
.game-progress {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.mission-track {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.mission-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  margin: 0 5rpx;
  position: relative;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.mission-item-hover {
  transform: scale(1.03);
  box-shadow: 0 6rpx 16rpx rgba(102, 126, 234, 0.35);
}

.mission-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.mission-item.mission-success {
  background: linear-gradient(135deg, #42a5f5 0%, #1976d2 100%);
  color: white;
}

.mission-item.mission-failed {
  background: linear-gradient(135deg, #ef5350 0%, #c62828 100%);
  color: white;
}

.mission-number {
  font-size: 24rpx;
  margin-bottom: 5rpx;
}

.mission-players {
  font-size: 20rpx;
  opacity: 0.8;
}

.mission-result-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.mission-success .mission-result-badge {
  background: #4caf50;
  color: white;
}

.mission-failed .mission-result-badge {
  background: #f44336;
  color: white;
}

.score-display {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 2rpx solid #e5e5e5;
}

.score-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.score-label {
  font-size: 28rpx;
  color: #666;
}

.score-value {
  font-size: 48rpx;
  font-weight: bold;
}

.score-item.good .score-value {
  color: #4caf50;
}

.score-item.evil .score-value {
  color: #f44336;
}

/* 状态区域 */
.status-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.current-leader {
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.leader-label {
  color: #666;
}

.leader-number {
  font-weight: bold;
  color: #667eea;
  margin-left: 10rpx;
}

.leader-badge {
  display: inline-block;
  margin-left: 10rpx;
  padding: 5rpx 15rpx;
  background: #667eea;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.warning-banner {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff3cd;
  border-left: 4rpx solid #ffc107;
  border-radius: 8rpx;
  color: #856404;
  font-size: 26rpx;
  text-align: center;
}

/* 提名阶段 */
.nomination-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.players-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.player-card {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
}

.player-card.selected {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  border-color: #4caf50;
  border-width: 4rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.4);
  transform: scale(1.05);
}

.player-card.selected::after {
  content: '✓';
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 40rpx;
  height: 40rpx;
  background: #4caf50;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.6);
}

.player-card-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.player-card-name {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.selected-count {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.waiting-message {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 投票阶段 */
.vote-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
}

.nominated-players {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.nominated-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  text-align: center;
}

.nominated-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.nominated-player {
  background: white;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.nom-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
  min-width: 60rpx;
}

.nom-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.vote-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.vote-tip {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

/* 任务执行阶段 */
.mission-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
}

.mission-message {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #666;
  font-size: 28rpx;
}

/* 按钮 */
.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: bold;
}

.btn-primary[disabled] {
  background: #cccccc;
  color: #999;
}

.btn-approve {
  flex: 1;
  background: #4caf50;
  color: white;
  font-weight: bold;
  transition: all 0.3s;
}

.btn-approve[disabled] {
  background: #a5d6a7;
  color: #f5f5f5;
}

.btn-approve.vote-selected {
  background: #2e7d32;
  box-shadow: 0 0 0 4rpx rgba(76, 175, 80, 0.5);
  transform: scale(1.05);
}

.btn-reject {
  flex: 1;
  background: #f44336;
  color: white;
  font-weight: bold;
  transition: all 0.3s;
}

.btn-reject[disabled] {
  background: #ef9a9a;
  color: #f5f5f5;
}

.btn-reject.vote-selected {
  background: #c62828;
  box-shadow: 0 0 0 4rpx rgba(244, 67, 54, 0.5);
  transform: scale(1.05);
}

/* 身份弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.role-modal {
  width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.role-modal-header {
  padding: 40rpx 30rpx;
  text-align: center;
}

.role-modal-header.good {
  background: linear-gradient(135deg, #4caf50 0%, #388e3c 100%);
}

.role-modal-header.evil {
  background: linear-gradient(135deg, #f44336 0%, #c62828 100%);
}

.role-modal-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.role-modal-side {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.role-modal-content {
  padding: 30rpx;
}

.role-modal-message {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.role-modal-players {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.role-modal-subtitle {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 15rpx;
}

.role-modal-player {
  padding: 15rpx;
  background: white;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #333;
}

.role-modal-player:last-child {
  margin-bottom: 0;
}

.player-num {
  color: #667eea;
  font-weight: bold;
  margin-right: 10rpx;
}

.player-nickname {
  margin-right: 10rpx;
}

.player-role {
  color: #999;
}

.role-modal-tip {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff3cd;
  border-left: 4rpx solid #ffc107;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #856404;
  line-height: 1.5;
}

.role-modal-footer {
  padding: 20rpx 30rpx 30rpx;
}

.btn-close {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

/* 任务投票记录弹窗 */
.vote-modal {
  width: 650rpx;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.vote-modal-header {
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  text-align: center;
  color: white;
}

.vote-modal-title {
  font-size: 34rpx;
  font-weight: bold;
}

.vote-modal-content {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.vote-round {
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
}

.vote-round-header {
  padding: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  background: #fafafa;
  border-bottom: 2rpx solid #f0f0f0;
}

.vote-round-list {
  padding: 10rpx 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.vote-round-player {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 10rpx;
  padding: 15rpx 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.vote-player-number {
  font-weight: bold;
  color: #667eea;
  width: 100rpx;
}

.vote-player-name {
  flex: 1;
  color: #333;
}

.vote-player-result {
  font-weight: bold;
}

.vote-player-result.approve {
  color: #4caf50;
}

.vote-player-result.reject {
  color: #f44336;
}

.vote-round-empty {
  text-align: center;
  color: #666;
  padding: 60rpx 20rpx;
  font-size: 28rpx;
}

.vote-modal-footer {
  padding: 20rpx 30rpx 30rpx;
}
