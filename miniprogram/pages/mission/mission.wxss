/* pages/mission/mission.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.rules-btn {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  color: white;
  font-size: 28rpx;
  z-index: 10;
}

.loading {
  text-align: center;
  color: white;
  font-size: 32rpx;
}

/* 等待区域 */
.waiting-section {
  text-align: center;
  color: white;
}

.waiting-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.waiting-text {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.waiting-desc {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 已提交区域 */
.submitted-section {
  text-align: center;
  color: white;
}

.submitted-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.submitted-text {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.submitted-desc {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 任务执行区域 */
.mission-section {
  width: 100%;
  max-width: 600rpx;
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
}

.mission-header {
  text-align: center;
  margin-bottom: 50rpx;
}

.mission-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.mission-subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.role-reminder {
  background: #f5f5f5;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 50rpx;
  text-align: center;
}

.role-badge {
  display: inline-block;
  padding: 15rpx 30rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.role-badge.good {
  background: #e8f5e9;
  color: #4caf50;
}

.role-badge.evil {
  background: #ffebee;
  color: #f44336;
}

.role-tip {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn {
  flex: 1;
  height: 120rpx;
  border-radius: 20rpx;
  font-size: 36rpx;
  border: none;
  font-weight: bold;
}

.btn-success {
  background: #4caf50;
  color: white;
}

.btn-fail {
  background: #f44336;
  color: white;
}

.btn-fail[disabled] {
  background: #cccccc;
  color: #999;
}

.warning {
  text-align: center;
  color: #ff9800;
  font-size: 26rpx;
  padding: 20rpx;
  background: #fff3cd;
  border-radius: 12rpx;
}
