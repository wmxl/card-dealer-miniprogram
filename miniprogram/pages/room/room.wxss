/* pages/room/room.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  position: relative;
}

.rules-btn {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  color: white;
  font-size: 28rpx;
  z-index: 10;
}

.header {
  margin-bottom: 40rpx;
}

.room-info {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.room-id {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.player-count {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.content {
  max-width: 600rpx;
  margin: 0 auto;
}

.join-section {
  text-align: center;
  padding-top: 200rpx;
}

.waiting-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 40rpx;
}

.my-info {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.value {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
}

.players-list {
  margin-bottom: 40rpx;
}

.player-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.player-number {
  font-size: 28rpx;
  color: #667eea;
  font-weight: bold;
}

.player-name {
  font-size: 28rpx;
  color: #333;
}

.actions {
  text-align: center;
}

.waiting-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  padding: 20rpx;
}

.result-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 40rpx;
}

.my-letter-card {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 30rpx;
}

.my-letter-card .label {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
}

.my-letter-card .letter {
  display: block;
  font-size: 120rpx;
  font-weight: bold;
  color: #fff;
}

.players-result {
  margin-bottom: 40rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.player-result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  margin-bottom: 15rpx;
  background: #f9f9f9;
  border-radius: 15rpx;
}

.result-number {
  font-size: 26rpx;
  color: #999;
  width: 100rpx;
}

.result-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.result-letter {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
  width: 80rpx;
  text-align: center;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
  margin-bottom: 20rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: bold;
}

.btn-secondary {
  background: #f5f5f5;
  color: #666;
}

.btn-share {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.game-started-tip {
  text-align: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.tip-icon {
  display: block;
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.tip-text {
  display: block;
  font-size: 40rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.tip-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}
